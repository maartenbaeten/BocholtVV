{% extends "@CMSTeam/index.html.twig" %}

{% block customStylesheets %}
    <link href="{{ asset('assets/css/plugins/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/plugins/dataTables/dataTables.responsive.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/plugins/dataTables/dataTables.tableTools.min.css') }}" rel="stylesheet">
{% endblock %}

{% block main %}

    <div class="row wrapper border-bottom white-bg page-heading" style="margin-bottom: 10px;">
        <div class="col-lg-10">
            <h2>
                Category list
            </h2>
        </div>
    </div>
    <div class="wrapper wrapper-content-wide animated fadeInRight">
        <div class="row">
            <div class="col-md-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">

                        <div class="table-responsive" >
                            <table id="categoryTable" class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for item in categories %}
                                        <tr>
                                            <td style="width:80%">
                                                {{ item.name }}
                                            </td>
                                            <td>
                                                <a href="{{ path('admin_team_list_by_category', {'id' : item.id}) }}">
                                                    <span class="fa fa-users" data-toggle="tooltip" data-placement="top" title="Teams of this category"></span>
                                                </a>&nbsp;
                                                <a href="{{ path('admin_category_edit', {'id' : item.id}) }}">
                                                    <span class="glyphicon glyphicon-edit" data-toggle="tooltip" data-placement="top" title="Edit category"></span>
                                                </a>&nbsp;
                                                <a href="{{ path('admin_category_delete', {'id' : item.id}) }}" class="deleteCategory">
                                                    <span class="glyphicon glyphicon-remove" data-toggle="tooltip" data-placement="top" title="Delete category"></span>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block customJavascripts %}
    <script src="{{ asset('assets/js/plugins/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('assets/js/plugins/dataTables/dataTables.bootstrap.js') }}"></script>
    <script src="{{ asset('assets/js/plugins/dataTables/dataTables.responsive.js') }}"></script>
    <script src="{{ asset('assets/js/plugins/dataTables/dataTables.tableTools.min.js') }}"></script>

    <script>
        $(document).ready(function() {
            $('[data-toggle="tooltip"]').tooltip();

            $('#categoryTable').DataTable();

            $('.deleteCategory').on('click', function() {
                var result = confirm('Are you sure you want to delete this category?');
                if(result) {
                    return true;
                } else {
                    return false;
                }
            });

        } );
    </script>
{% endblock %}

