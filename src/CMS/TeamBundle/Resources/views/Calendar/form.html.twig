{% extends "@CMSTeam/index.html.twig" %}

{% block main %}

    <div class="row wrapper border-bottom white-bg page-heading" style="margin-bottom: 10px;">
        <div class="col-lg-10">
            <h2>
                {% block title %}
                {% endblock %}
            </h2>
        </div>
    </div>
    {#I need min-height because of problems with displaying calendar in datetime picker#}
    <div class="wrapper wrapper-content-wide animated fadeInRight" style="min-height: 450px;">
        <div class="row">
            <div class="col-md-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        {{ form_widget(form.team, {'attr':{ 'class': 'form-control'}} ) }}
                                        {{ form_errors(form.team)}}
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        {{ form_widget(form.creator, {'attr':{'placeholder':"Creator", 'class': 'form-control'}} ) }}
                                        {{ form_errors(form.creator)}}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group input-group date datetimepicker1">
                                        {{ form_widget(form.date, {'attr':{'data-format': "dd/MM/yyyy HH:mm", 'class': 'form-control'}} ) }}
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                    {{ form_errors(form.date)}}
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        {{ form_widget(form.score, {'attr':{'placeholder':"Score", 'class': 'form-control'}} ) }}
                                        {{ form_errors(form.score)}}
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Home</label>
                                        {{ form_widget(form.home, {'attr':{ 'class': ''}} ) }}
                                        {{ form_errors(form.home)}}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        {{ form_widget(form.challengerName, {'attr':{'placeholder':"Challenger name", 'class': 'form-control'}} ) }}
                                        {{ form_errors(form.challengerName)}}
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        {{ form_widget(form.file, {'attr':{'class': 'form-control'}} ) }}
                                        {{ form_errors(form.file)}}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12" style="padding-bottom: 20px;">
                                    {{ form_widget(form.save, {'attr' : {'class' : ' btn btn-lg btn-full-width btn-primary m-t-n-xs eventFormButton'} }) }}
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}