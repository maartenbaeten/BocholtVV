{% extends "@CMSTeam/index.html.twig" %}

{% block main %}

    <div class="row wrapper border-bottom white-bg page-heading" style="margin-bottom: 10px;">
        <div class="col-lg-10">
            <h2>
                {% block title %}
                {% endblock %}
            </h2>
        </div>
    </div>
    <div class="wrapper wrapper-content-wide animated fadeInRight">
        <div class="row">
            <div class="col-md-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        {{ form_widget(form.roleName, {'attr':{'placeholder':"Role name", 'class': 'form-control'}} ) }}
                                        {{ form_errors(form.roleName)}}
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        {{ form_widget(form.number, {'attr':{'placeholder':"Role number", 'class': 'form-control'}} ) }}
                                        {{ form_errors(form.number)}}
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Staff</label>
                                        {{ form_widget(form.staff, {'attr':{ 'class': ''}} ) }}
                                        {{ form_errors(form.staff)}}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        {{ form_widget(form.singularRoleName, {'attr':{'placeholder':"Enkelvoud", 'class': 'form-control'}} ) }}
                                        {{ form_errors(form.singularRoleName)}}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12" style="padding-bottom: 20px;">
                                    {{ form_widget(form.save, {'attr' : {'class' : ' btn btn-lg btn-full-width btn-primary m-t-n-xs eventFormButton'} }) }}
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}