<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon"
          type="image/png"
          href="https://pixabay.com/static/uploads/photo/2015/12/22/04/00/edit-1103598_960_720.png">
    <title>Bocholt | Admin</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('assets/vendor/font-awesome/css/font-awesome.css') }}" />
        <link rel="stylesheet" href="{{ asset('assets/css/animate.css') }}" />
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}" />
        <link rel="stylesheet" href="{{ asset('assets/css/custom.css') }}" />
        <link href="{{ asset('assets/css/plugins/datapicker/datepicker3.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/vendor/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css') }}">

    {% endblock %}
    {% block customStylesheets %}
    {% endblock %}
</head>

<body>
<div id="wrapper">
    <nav class="navbar-default navbar-static-side" role="navigation">
        <div class="sidebar-collapse">
            <ul class="nav metismenu" id="side-menu">
                <li class="nav-header">
                    <div class="dropdown profile-element">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="clear">
                                <span class="block m-t-xs"> <strong class="font-bold">{{ app.user.firstName }} {{ app.user.lastName }}</strong></span>
                                <span class="block m-t-xs"> <strong class="font-bold">{{ app.user.email }}</strong></span>
                                <span class="text-muted text-xs block">
                                    {% if 'ROLE_SUPER_ADMIN' in  app.user.getRoles %}
                                        Super Administrator
                                    {% else %}
                                        Administrator
                                    {% endif %}
                                </span>
                            </span>
                        </a>
                    </div>
                </li>
                <li {% if(app.request.get('_route') == 'admin_team_dashboard') %}class="open active"{% endif %}>
                    <a href="{{ path('admin_team_dashboard') }}"><i class="fa"></i> <span class="nav-label">Dashboard</span><span class="fa"></span></a>
                </li>
                <li {% if(app.request.get('_route') == 'admin_category_list' or app.request.get('_route') == 'admin_category_show' or app.request.get('_route') == 'admin_category_create' or app.request.get('_route') == 'admin_category_update' or app.request.get('_route') == 'admin_category_delete' )%}class="open active"{% endif %}>
                    <a href="#"><i class="fa fa-user"></i> <span class="nav-label">Category</span><span class="fa arrow"></span></a>
                    <ul class="nav nav-second-level collapse">
                        <li {% if(app.request.get('_route') == 'admin_category_list') %}class="active"{% endif %}><a href="{{ path('admin_category_list') }}">List</a></li>
                        <li {% if(app.request.get('_route') == 'admin_category_create') %}class="active"{% endif %}><a href="{{ path('admin_category_create') }}">Create</a></li>
                    </ul>
                </li>
                <li {% if(app.request.get('_route') == 'admin_team_list' or app.request.get('_route') == 'admin_team_show' or app.request.get('_route') == 'admin_team_create' or app.request.get('_route') == 'admin_team_update'
                    or app.request.get('_route') == 'admin_team_delete' or app.request.get('_route') == 'admin_team_list_by_category') %}class="open active"{% endif %}>
                    <a href="#"><i class="fa fa-users"></i> <span class="nav-label">Team</span><span class="fa arrow"></span></a>
                    <ul class="nav nav-second-level collapse">
                        <li {% if(app.request.get('_route') == 'admin_team_list') %}class="active"{% endif %}><a href="{{ path('admin_team_list') }}">List</a></li>
                        <li {% if(app.request.get('_route') == 'admin_team_create') %}class="active"{% endif %}><a href="{{ path('admin_team_create') }}">Create</a></li>
                    </ul>
                </li>
                <li {% if(app.request.get('_route') == 'admin_teammember_list' or app.request.get('_route') == 'admin_team_show' or app.request.get('_route') == 'admin_teammember_create' or app.request.get('_route') == 'admin_teammember_update' or app.request.get('_route') == 'admin_teammember_delete' )%}class="open active"{% endif %}>
                    <a href="#"><i class="fa fa-user"></i> <span class="nav-label">Team Member</span><span class="fa arrow"></span></a>
                    <ul class="nav nav-second-level collapse">
                        <li {% if(app.request.get('_route') == 'admin_teammember_list') %}class="active"{% endif %}><a href="{{ path('admin_teammember_list') }}">List</a></li>
                        <li {% if(app.request.get('_route') == 'admin_teammember_create') %}class="active"{% endif %}><a href="{{ path('admin_teammember_create') }}">Create</a></li>
                    </ul>
                </li>
                <li {% if(app.request.get('_route') == 'admin_role_list' or app.request.get('_route') == 'admin_role_create' or app.request.get('_route') == 'admin_role_update' or app.request.get('_route') == 'admin_role_delete' )%}class="open active"{% endif %}>
                    <a href="#"><i class="fa fa-users"></i> <span class="nav-label">Role</span><span class="fa arrow"></span></a>
                    <ul class="nav nav-second-level collapse">
                        <li {% if(app.request.get('_route') == 'admin_teammember_list') %}class="active"{% endif %}><a href="{{ path('admin_role_list') }}">List</a></li>
                        <li {% if(app.request.get('_route') == 'admin_teammember_create') %}class="active"{% endif %}><a href="{{ path('admin_role_create') }}">Create</a></li>
                    </ul>
                </li>
                <li {% if(app.request.get('_route') == 'admin_calendar_list' or app.request.get('_route') == 'admin_calendar_create' or app.request.get('_route') == 'admin_calendar_update' or app.request.get('_route') == 'admin_calendar_delete' )%}class="open active"{% endif %}>
                    <a href="#"><i class="fa fa-calendar"></i> <span class="nav-label">Calendar</span><span class="fa arrow"></span></a>
                    <ul class="nav nav-second-level collapse">
                        <li {% if(app.request.get('_route') == 'admin_calendar_list') %}class="active"{% endif %}><a href="{{ path('admin_calendar_list') }}">List</a></li>
                        <li {% if(app.request.get('_route') == 'admin_calendar_create') %}class="active"{% endif %}><a href="{{ path('admin_calendar_create') }}">Create</a></li>
                    </ul>
                </li>
                <li {% if(app.request.get('_route') == 'admin_news_list' or app.request.get('_route') == 'admin_news_create' or app.request.get('_route') == 'admin_news_update' or app.request.get('_route') == 'admin_news_delete' or app.request.get('_route') == 'admin_news_list_by_team' or app.request.get('_route') == 'admin_news_delete_image' )%}class="open active"{% endif %}>
                    <a href="#"><i class="fa fa-list"></i> <span class="nav-label">News</span><span class="fa arrow"></span></a>
                    <ul class="nav nav-second-level collapse">
                        <li {% if(app.request.get('_route') == 'admin_news_list') %}class="active"{% endif %}><a href="{{ path('admin_news_list') }}">List</a></li>
                        <li {% if(app.request.get('_route') == 'admin_news_create') %}class="active"{% endif %}><a href="{{ path('admin_news_create') }}">Create</a></li>
                    </ul>
                </li>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <li {% if(app.request.get('_route') == 'admin_user_list' or app.request.get('_route') == 'admin_user_show' or app.request.get('_route') == 'admin_user_create' or app.request.get('_route') == 'admin_user_update' or app.request.get('_route') == 'admin_user_delete' )%}class="open active"{% endif %}>
                        <a href="#"><i class="fa fa-user"></i> <span class="nav-label">User</span><span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level collapse">
                            <li {% if(app.request.get('_route') == 'admin_user_list') %}class="active"{% endif %}><a href="{{ path('admin_user_list') }}">List</a></li>
                            <li {% if(app.request.get('_route') == 'admin_user_create') %}class="active"{% endif %}><a href="{{ path('admin_user_create') }}">Create</a></li>
                        </ul>
                    </li>
                {% endif %}
                <li {% if(app.request.get('_route') == 'fos_user_change_password') %}class="open active"{% endif %}>
                    <a href="{{ path('fos_user_change_password') }}"><i class="fa"></i> <span class="nav-label">Change password</span><span class="fa"></span></a>
                </li>
            </ul>
        </div>
    </nav>
    <div id="page-wrapper" class="gray-bg dashbard-1">
        <div class="row border-bottom">
            <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                    {#<form role="search" class="navbar-form-custom" action="search_results.html">#}
                        {#<div class="form-group">#}
                            {#<input type="text" placeholder="Search for something..." class="form-control" name="top-search" id="top-search">#}
                        {#</div>#}
                    {#</form>#}
                </div>
                <ul class="nav navbar-top-links navbar-right">
                    <li>
                        <a href="{{ path('fos_user_security_logout') }}">
                            <i class="fa fa-sign-out"></i> Log out
                        </a>
                    </li>
                </ul>

            </nav>
        </div>
        {% block main %}{% endblock %}
        <div class="row">
            <div class="col-lg-12">
                <div class="footer">
                    <div class="pull-right">
                    </div>
                    <div>
                        <strong>Created By</strong> <a target="_blank" href="http://www.panenco.com">Panenco</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('assets/vendor/jquery/dist/jquery.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/vendor/metisMenu/dist/metisMenu.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/vendor/slimScroll/jquery.slimscroll.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/js/inspinia.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/vendor/PACE/pace.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/vendor/jquery-ui/jquery-ui.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/js/symfony.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/vendor/moment/min/moment.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/vendor/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script>
        function dateTimePicker() {
            $('.datetimepicker1').datetimepicker({
                format : 'DD/MM/YYYY HH:mm',
            });
        }

        $(document).ready(function(){
            dateTimePicker();
        });

    </script>
{% endblock %}

{% block customJavascripts %}
{% endblock %}

{{ tinymce_init() }}
</body>
</html>