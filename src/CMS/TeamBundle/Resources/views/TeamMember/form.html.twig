{% extends "@CMSTeam/index.html.twig" %}

{% block main %}

    <div class="row wrapper border-bottom white-bg page-heading" style="margin-bottom: 10px;">
        <div class="col-lg-10">
            <h2>
                {% block title %}
                {% endblock %}
            </h2>
        </div>
    </div>
    <div class="wrapper wrapper-content-wide animated fadeInRight">
        <div class="row">
            <div class="col-md-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Team</label>
                                    {{ form_widget(form.team,  {'attr':{'placeholder':"Team", 'class': 'form-control'}}  ) }}
                                    {{ form_errors(form.team)}}
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Role</label>
                                    {{ form_widget(form.role,  {'attr':{'placeholder':"Team", 'class': 'form-control'}} ) }}
                                    {{ form_errors(form.role)}}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    {{ form_widget(form.firstName, {'attr':{'placeholder':"First name", 'class': 'form-control'}} ) }}
                                    {{ form_errors(form.firstName)}}
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    {{ form_widget(form.lastName, {'attr':{'placeholder':"Last name", 'class': 'form-control'}} ) }}
                                    {{ form_errors(form.lastName)}}
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    {{ form_widget(form.email, {'attr':{'placeholder':"Player email", 'class': 'form-control'}} ) }}
                                    {{ form_errors(form.email)}}
                                </div>
                            </div>
                        </div>

                        {#<div class="row">#}
                            {#<div class="col-lg-6">#}
                                {#<div class="form-group">#}
                                    {#{{ form_widget(form.playerAlias, {'attr':{'placeholder':"Player alias", 'class': 'form-control'}} ) }}#}
                                    {#{{ form_errors(form.playerAlias)}}#}
                                {#</div>#}
                            {#</div>#}

                            {#<div class="col-lg-6">#}
                                {#<div class="form-group">#}
                                    {#{{ form_widget(form.email, {'attr':{'placeholder':"Player email", 'class': 'form-control'}} ) }}#}
                                    {#{{ form_errors(form.email)}}#}
                                {#</div>#}
                            {#</div>#}
                        {#</div>#}

                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    {{ form_widget(form.city, {'attr':{'placeholder':"City", 'class': 'form-control'}}) }}
                                    {{ form_errors(form.city)}}
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    {{ form_widget(form.street, {'attr':{'placeholder':"Street", 'class': 'form-control'}}) }}
                                    {{ form_errors(form.street)}}
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    {{ form_widget(form.number, {'attr':{'placeholder':"Number", 'class': 'form-control'}}) }}
                                    {{ form_errors(form.number)}}
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    {{ form_widget(form.zip, {'attr':{'placeholder':"Zip Code", 'class': 'form-control'}}) }}
                                    {{ form_errors(form.zip)}}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    {{ form_widget(form.creator,  {'attr':{'placeholder':"Creator", 'class': 'form-control'}}  ) }}
                                    {{ form_errors(form.creator)}}
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    {{ form_widget(form.file,  {'attr':{'placeholder':"File", 'class': 'form-control'}} ) }}
                                    {{ form_errors(form.file)}}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    {{ form_widget(form.teamNumber,  {'attr':{'placeholder':"Team Number", 'class': 'form-control'}}) }}
                                    {{ form_errors(form.teamNumber)}}
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    {{ form_widget(form.nationality,  {'attr':{'placeholder':"Nationality", 'class': 'form-control'}}) }}
                                    {{ form_errors(form.nationality)}}
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    {{ form_widget(form.birthDate,  {'attr':{'placeholder':"Birthdate", 'class': 'form-control'}}) }}
                                    {{ form_errors(form.birthDate)}}
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    {{ form_label(form.membershipPaid) }}
                                    {{ form_widget(form.membershipPaid) }}
                                    {{ form_errors(form.membershipPaid)}}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12" style="padding-bottom: 20px;">
                                {{ form_widget(form.save, {'attr' : {'class' : ' btn btn-lg btn-full-width btn-primary m-t-n-xs eventFormButton'} }) }}
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
