{% extends "CMSTemplateBundle:Default:index.html.twig" %}

{% block main %}
    <div class="container">
        <div class="row">

            <!-- main start -->
            <!-- ================ -->
            <div class="main col-md-12">
                <h1 class="page-title">Forgot password form</h1>
                <div class="separator-2"></div>
                {% if message %}
                    {% if message.type == 'error' %}
                        <div class="row">
                            <div class="col-md-12">
                                <div class="alert alert-danger fade in" style="margin-top: 0" role="alert">
                                    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                                    <h4>Error!</h4>
                                    <p>{{ message.content }}</p>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    {% if message.type == 'success' %}
                        <div class="alert alert-success" role="alert">
                            <strong>Success!</strong> {{ message.content }}
                        </div>
                    {% endif %}
                {% endif %}
                <div class="row">
                    <div class="col-md-12">
                        Enter your e-mail and we'll send you a new password.
                    </div>
                </div>
                <form role="form" method="post">
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-6">
                                <label for="exampleInputEmail1">Email address</label>
                                <input type="email" name="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
                            </div>
                        </div>
                    </div>
                    <div class="row margintop15">
                        <div class="col-md-8">
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- main end -->
        </div>
    </div>
{% endblock %}