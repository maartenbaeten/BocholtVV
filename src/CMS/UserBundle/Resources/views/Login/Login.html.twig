<div class="widget padding8">
    <div class="row">
        <div class="col-md-12">
            {% if app.user %}
                <h2>Logout</h2>
                <div class="row">
                    <div class="col-md-12">
                        Welkom, {{ app.user.username }}
                    </div>
                </div>
                <div class="seperator20"></div>
                <form action="{{ path("_logout") }}" method="post" id="logout">
                    <button type="submit" class="btn btn-fullwidth">Logout</button>
                </form>
            {% else %}
                <h2>Login</h2>
                <div class="row">
                    <div class="col-md-12">
                        {{ item.content | raw }}
                    </div>
                </div>
                {% if error is defined %}
                    <div class="error">{{ error.message }}</div>
                {% endif %}
                <form action="{{ path("_security_check") }}" method="post" id="login">
                    <div class="form-group">
                        <label class="control-label">Username</label>
                        <input type="text" class="form-control" id="username" name="_username">
                    </div>
                    <div class="form-group">
                        <label class="control-label">Password</label>
                        <input type="password" class="form-control"  id="password" name="_password">
                    </div>
                    <button type="submit" class="btn btn-fullwidth">Login</button>
                </form>
            {% endif %}
        </div>
    </div>
</div>